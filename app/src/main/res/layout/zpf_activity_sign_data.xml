<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zpf_action_bar_gray"
    android:orientation="vertical">
    <include
        android:id="@+id/il_topbar"
        layout="@layout/zpf_include_action_bar"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/zpf_gray_line"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/zpf_txt_gray"
                android:paddingLeft="15dp"
                android:textSize="@dimen/zpf_common_txt_size"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="商户名"/>
            <EditText
                android:id="@+id/et_com_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/zpf_common_txt_size"
                android:background="@null"
                android:layout_gravity="center_vertical|right"
                android:paddingRight="45dp"
                android:gravity="center_vertical|right"
                android:text=""/>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/zpf_gray_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/zpf_txt_gray"
                android:paddingLeft="15dp"

                android:textSize="@dimen/zpf_common_txt_size"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="真实姓名"/>
            <EditText
                android:id="@+id/et_real_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/zpf_common_txt_size"
                android:background="@null"
                android:layout_gravity="center_vertical|right"
                android:paddingRight="45dp"
                android:gravity="center_vertical|right"
                android:text=""/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/zpf_gray_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/zpf_txt_gray"
                android:textSize="@dimen/zpf_common_txt_size"
                android:paddingLeft="15dp"

                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="身份证号"/>
            <EditText
                android:id="@+id/et_card_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/zpf_common_txt_size"
                android:layout_gravity="center_vertical|right"
                android:paddingRight="45dp"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:text=""/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/zpf_gray_line"/>
        <RelativeLayout
            android:id="@+id/rl_card_just"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/zpf_txt_gray"
                android:paddingLeft="15dp"

                android:textSize="@dimen/zpf_common_txt_size"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="手持身份证正面照"/>
            <ImageView
                android:id="@+id/iv_idCardJust"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/iv_card1_next"
                android:scaleType="centerInside"/>


            <ImageView
                android:id="@+id/iv_card1_next"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:scaleType="centerInside"
                android:layout_alignParentRight="true"
                android:src="@mipmap/pub_btn_next"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/zpf_gray_line"/>
        <RelativeLayout
            android:id="@+id/rl_card_back"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/zpf_txt_gray"
                android:paddingLeft="15dp"

                android:textSize="@dimen/zpf_common_txt_size"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="手持身份证反面照"/>
            <ImageView
                android:id="@+id/iv_idCardBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/iv_card2_next"
                android:scaleType="centerInside"/>


            <ImageView
                android:id="@+id/iv_card2_next"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:scaleType="centerInside"
                android:layout_alignParentRight="true"
                android:src="@mipmap/pub_btn_next"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/zpf_gray_line"/>
    </LinearLayout>
</LinearLayout>