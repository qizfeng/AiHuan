<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/zpf_action_bar_gray"
    android:orientation="vertical">
    <include
        android:id="@+id/il_topbar"
        layout="@layout/zpf_include_action_bar"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="@drawable/zpf_pub_selector"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:paddingRight="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/iv_right_arrow"
                android:gravity="center_vertical"
                android:text="更改头像"
                android:textColor="@color/zpf_action_bar_gray_line"
                android:textSize="@dimen/zpf_common_txt_size" />

            <ImageView
                android:id="@+id/iv_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/pub_btn_next" />


            <com.zipingfang.aihuan.view.RoundedImageView
                android:id="@+id/iv_header"
                app:corner_radius="100dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_error"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/zpf_gray_line" />

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/zpf_pub_selector"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:paddingRight="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="昵称"
                android:textColor="@color/zpf_action_bar_gray_line"
                android:textSize="@dimen/zpf_common_txt_size" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/pub_btn_next"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:textColor="@color/zpf_action_bar_gray_line"
                android:textSize="@dimen/zpf_common_txt_size" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/zpf_gray_line" />

        <LinearLayout
            android:id="@+id/ll_introduce"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/zpf_pub_selector"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:paddingRight="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="个人简介"
                android:textColor="@color/zpf_action_bar_gray_line"
                android:textSize="@dimen/zpf_common_txt_size" />

            <TextView
                android:id="@+id/tv_introduce"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/pub_btn_next"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:textColor="@color/zpf_action_bar_gray_line"
                android:textSize="@dimen/zpf_common_txt_size" />
        </LinearLayout>



        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/zpf_gray_line" />

        <LinearLayout
            android:id="@+id/ll_gender"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/zpf_pub_selector"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:paddingRight="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="性别"
                android:textColor="@color/zpf_action_bar_gray_line"
                android:textSize="@dimen/zpf_common_txt_size" />

            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/pub_btn_next"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:textColor="@color/zpf_action_bar_gray_line"
                android:textSize="@dimen/zpf_common_txt_size" />
        </LinearLayout>



        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/zpf_gray_line" />

        <LinearLayout
            android:id="@+id/ll_birth"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/zpf_pub_selector"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:paddingRight="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="出生年月"
                android:textColor="@color/zpf_action_bar_gray_line"
                android:textSize="@dimen/zpf_common_txt_size" />

            <TextView
                android:id="@+id/tv_birth"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/pub_btn_next"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:textColor="@color/zpf_action_bar_gray_line"
                android:textSize="@dimen/zpf_common_txt_size" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/zpf_action_bar_gray_line" />
    </LinearLayout>
</LinearLayout>