<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zpf_action_bar_gray"
    android:orientation="vertical">

    <include
        android:id="@+id/il_topbar"
        layout="@layout/zpf_include_action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="企业名称"
                android:textColor="@color/zpf_txt_gray"
                android:textSize="@dimen/zpf_common_txt_size" />

            <EditText
                android:id="@+id/et_com_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:background="@null"
                android:paddingRight="15dp"
                android:textSize="@dimen/zpf_common_txt_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/zpf_gray_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="企业法人"
                android:textColor="@color/zpf_txt_gray"
                android:textSize="@dimen/zpf_common_txt_size" />

            <EditText
                android:id="@+id/et_company_person_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:inputType="number"
                android:gravity="center_vertical|right"
                android:background="@null"
                android:paddingRight="15dp"
                android:textSize="@dimen/zpf_common_txt_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/zpf_gray_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="开户行名称"
                android:textColor="@color/zpf_txt_gray"
                android:textSize="@dimen/zpf_common_txt_size"
                android:id="@+id/textView" />

            <EditText
                android:id="@+id/et_bank_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:paddingRight="15dp"
                android:textSize="@dimen/zpf_common_txt_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/zpf_gray_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="银行账号"
                android:textColor="@color/zpf_txt_gray"
                android:textSize="@dimen/zpf_common_txt_size" />

            <EditText
                android:id="@+id/et_bank_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:inputType="phone"
                android:gravity="center_vertical|right"
                android:background="@null"
                android:paddingRight="15dp"
                android:textSize="@dimen/zpf_common_txt_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/zpf_gray_line" />

        <RelativeLayout
            android:id="@+id/rl_license_img"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/zpf_txt_gray"
                android:paddingLeft="10dp"

                android:textSize="@dimen/zpf_common_txt_size"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="营业执照正面照"/>
            <ImageView
                android:id="@+id/iv_license"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/iv_card1_next"
                android:scaleType="centerInside"/>


            <ImageView
                android:id="@+id/iv_card1_next"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:scaleType="centerInside"
                android:layout_alignParentRight="true"
                android:src="@mipmap/pub_btn_next"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/zpf_gray_line" />

        <RelativeLayout
            android:id="@+id/rl_account_img"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/zpf_txt_gray"
                android:paddingLeft="10dp"

                android:textSize="@dimen/zpf_common_txt_size"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="对公账户照片"/>
            <ImageView
                android:id="@+id/iv_bank_account"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/iv_card_next"
                android:scaleType="centerInside"/>


            <ImageView
                android:id="@+id/iv_card_next"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:scaleType="centerInside"
                android:layout_alignParentRight="true"
                android:src="@mipmap/pub_btn_next"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/zpf_gray_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="企业电话"
                android:textColor="@color/zpf_txt_gray"
                android:textSize="@dimen/zpf_common_txt_size" />

            <EditText
                android:id="@+id/et_com_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:inputType="phone"
                android:gravity="center_vertical|right"
                android:background="@null"
                android:paddingRight="15dp"
                android:textSize="@dimen/zpf_common_txt_size" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/zpf_gray_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"

            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxHeight="45dp"
                android:text="企业地址"
                android:textColor="@color/zpf_txt_gray"
                android:textSize="@dimen/zpf_common_txt_size" />

            <EditText
                android:id="@+id/et_com_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:inputType="phone"
                android:maxHeight="45dp"
                android:gravity="center_vertical|right"
                android:background="@null"
                android:paddingRight="15dp"
                android:textSize="@dimen/zpf_common_txt_size" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/zpf_gray_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_agreement"
                style="@style/zpf_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:padding="5dp"
                android:text="我已阅读并同意"
                android:textColor="@color/zpf_txt_gray" />

            <TextView
                android:id="@+id/tv_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《商家签约协议》"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_submit_apply"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/zpf_btn_black_login"
            android:paddingLeft="45dp"
            android:paddingRight="45dp"
            android:text="提交申请"
            android:layout_marginBottom="30dp"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>