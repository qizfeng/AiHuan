<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="bottom"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/zpf_action_bar_gray">

            <TextView
                android:id="@+id/tv_dialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dip"
                android:gravity="center_vertical"
                android:text="取消"
                android:textColor="@color/zpf_gray_line"
                android:textSize="@dimen/zpf_common_txt_size" />

            <TextView
                android:id="@+id/btn_dialog_sure"
                android:layout_width="77dip"
                android:layout_height="33dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/zpf_user_edit_nickname_button_color"
                android:textSize="@dimen/zpf_common_txt_size" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/zpf_gray_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <com.zipingfang.aihuan.wheel.WheelView
                android:id="@+id/wv_province"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <com.zipingfang.aihuan.wheel.WheelView
                android:id="@+id/wv_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <com.zipingfang.aihuan.wheel.WheelView
                android:id="@+id/wv_district"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>