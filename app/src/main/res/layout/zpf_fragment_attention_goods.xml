<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <com.zipingfang.aihuan.pullToRefreshView.PullToRefreshLayout
        android:id="@+id/refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            layout="@layout/zpf_layout_refresh_header"/>
        <com.zipingfang.aihuan.pullToRefreshView.PullableGridView
            android:id="@+id/lv_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="0dp"
            android:verticalSpacing="0dp"
            android:numColumns="2"/>
        <include
            layout="@layout/zpf_layout_load_more"/>
    </com.zipingfang.aihuan.pullToRefreshView.PullToRefreshLayout>
</LinearLayout>