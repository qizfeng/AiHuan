<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zpf_action_bar_gray"
    android:orientation="vertical">

    <include
        android:id="@+id/il_topbar"
        layout="@layout/zpf_include_action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="充值金额(¥)"
            android:textColor="@color/black"
            android:textSize="@dimen/zpf_common_txt_size" />

        <EditText
            android:id="@+id/et_recharge_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="请输入充值金额"
            android:inputType="numberDecimal"
            android:paddingRight="15dp"
            android:text=""
            android:textColor="@color/zpf_txt_gray"
            android:textSize="@dimen/zpf_common_txt_size" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="选择充值账户"
        android:textColor="@color/black"
        android:textSize="@dimen/zpf_action_bar_title_sub_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/account_wechat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="微信钱包"
                    android:textColor="@color/zpf_txt_gray"
                    android:textSize="@dimen/zpf_action_bar_title_sub_size" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/account_alpay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="支付宝"
                    android:textColor="@color/zpf_txt_gray"
                    android:textSize="@dimen/zpf_action_bar_title_sub_size" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/account_jd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="京东钱包"
                    android:textColor="@color/zpf_txt_gray"
                    android:textSize="@dimen/zpf_action_bar_title_sub_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="right|center"
                    android:gravity="right|center" >

                    <ImageView
                        android:id="@+id/iv_wechat"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/btn_circle_s"
                      android:scaleType="fitCenter"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_alipay"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="right|center"
                    android:gravity="right|center" >

                    <ImageView
                        android:id="@+id/iv_alipay"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/btn_circle_n"
                        android:scaleType="fitCenter"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_jd"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="right|center"
                    android:gravity="right|center" >

                    <ImageView
                        android:id="@+id/iv_jd"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/btn_circle_n"
                        android:scaleType="fitCenter"
                        />
                </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_next"
        style="@style/btn.red"
        android:layout_width="220dp"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        android:background="@drawable/zpf_btn_black_login"
        android:text="下一步"
        android:textColor="@color/white" />
</LinearLayout>